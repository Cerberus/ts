{
  "compilerOptions": {
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"target": "es2020",
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "lib.d.ts",
    "node_modules/assemblyscript/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/assembly"
  ]
}