{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "lib.d.ts",
    "node_modules/assemblyscript/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/assembly"
  ]
}